            <kind>1</kind>
            <string>/*
*   Create Evidence Slot Instance
*/


for (i = 0; i &lt; global.numberOfEvidenceSlot; i += 1)
{
    // Create Proof Slots
    global.EvidenceSlot[i] = instance_create(0, 0, obj_Slot);
    // Load global variables and fields from file
    if (file_exists("Save.sav"))
    {
        var label = "evidence_slot" + string(i); //generate proof slot name
        ini_open("Save.sav");   //open file
        
        global.EvidenceSlot[i].item.type = ini_read_real(label,"type",0);
        global.EvidenceSlot[i].item.text = ini_read_string(label,"text","");
        global.EvidenceSlot[i].item.slot = ini_read_real(label,"slot",-1);
        global.EvidenceSlot[i].acceptType = ini_read_real(label,"acceptType",1);
        global.EvidenceSlot[i].correctAnswer = ini_read_real(label,"correctAnswer",i);
        global.EvidenceSlot[i].x = ini_read_real(label, "x", 0) + room_width/3 + 20;
        global.EvidenceSlot[i].y = ini_read_real(label, "y", 0) + 100;
        
        ini_close();    // close file
    }
    // set default value
    else
    {
        x1 = view_xview[0];
        y1 = view_yview[0];
        x2 = view_xview[0] + view_wview[0]/2;
        y2 = view_yview[0] + view_hview[0];
        
        var ix = x1 + 200;
        var iy = y1 + 200 + i * (32 + 50);
        
        global.EvidenceSlot[i].acceptType = 1;
        global.EvidenceSlot[i].correctAnswer = i;
        global.EvidenceSlot[i].x = ix;
        global.EvidenceSlot[i].y = iy;
    }
    // calculate text box size for proof slots
    with (global.EvidenceSlot[i].item)
    {
        padding = 16;
        maxLength = room_width/3;
        font = fnt_ComicSansMS;
                
        text_length = string_length(text);
        font_size = font_get_size(font);
                
        draw_set_font(font);
                
        text_width = string_width_ext(text, font_size+(font_size/2), maxLength);
        text_height = string_height_ext(text, font_size+(font_size/2), maxLength);
                
        boxWidth = text_width + padding * 2;
        boxHeight = text_height + padding * 2
    }
}
</string>
