            <string>/*
*   Declare Global Variables
*/

if (file_exists("Save.sav"))
{
    ini_open("Save.sav");
    global.showEvidenceInventory = ini_read_real("global","showEvidenceInventory",true);
    global.showProofSlots = ini_read_real("global","showProofSlots",true);
    global.numberOfEvidence = ini_read_real("global","numberOfEvidence",4);
    global.numberOfEvidenceSlot = ini_read_real("global","numberOfEvidenceSlot",4);
    global.numberOfRelation = ini_read_real("global","numberOfRelation",3);
    global.boxWidth = ini_read_real("global","boxWidth",32);
    global.boxHeight = ini_read_real("global","boxHeight",32);
    ini_close();
}
else
{
    global.showEvidenceInventory = true;
    global.showProofSlots = true;
    global.numberOfEvidence = 4;
    global.numberOfEvidenceSlot = 4;
    global.numberOfRelation = 3;
    global.boxWidth = 32;
    global.boxHeight = 32
}
global.mouseItem = instance_create(0, 0, obj_Item);
with (global.mouseItem)
{
    padding = 16;
    maxLength = view_xview[0] + view_wview[0]/2;
    font = fnt_ComicSansMS;
                    
    text_length = string_length(text);
    font_size = font_get_size(font);
                    
    draw_set_font(font);
                    
    text_width = string_width_ext(text, font_size+(font_size/2), maxLength);
    text_height = string_height_ext(text, font_size+(font_size/2), maxLength);
                    
    boxWidth = text_width + padding * 2;
    boxHeight = text_height + padding * 2
}
